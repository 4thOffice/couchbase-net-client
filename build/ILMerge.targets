<Project DefaultTargets="Build" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
	<PropertyGroup>
		<IlMergePath Condition=" '$(IlMergePath)' == '' ">$(ProgramFiles)\Microsoft\Ilmerge\ilmerge.exe</IlMergePath>
	</PropertyGroup>

	<Target Name="AfterBuild" Condition=" '$(Configuration)' == 'Release' ">
		<CreateItem Include="@(ReferencePath)" Condition=" '%(CopyLocal)' == 'true' ">
			<Output TaskParameter="Include" ItemName="MergeAssemblies"/>
		</CreateItem>
		<Exec Command="&quot;$(IlMergePath)&quot; /out:@(MainAssembly) &quot;@(IntermediateAssembly)&quot; @(MergeAssemblies->'&quot;%(FullPath)&quot;', ' ') /internalize:&quot;..\build\internalize.exclude&quot; /keyfile:&quot;$(PrivateKeyPath)&quot;"/>
	</Target>
	<Target Name="_CopyFilesMarkedCopyLocal"  Condition=" '$(Configuration)' == 'Release' " />
</Project>